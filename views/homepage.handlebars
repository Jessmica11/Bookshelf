<body>
  <!-- Main Section -->
  <main>

    <section id="gallery">
      <h2 class="p-8"><strong>Top-Rated Books in Our Library</strong></h2>
      <div class="gallery-container">
        {{#each galleryItems}}
          <div class="gallery-item">
            {{cover_edition_key}}<img
              src="https://covers.openlibrary.org/b/olid/{{cover_edition_key}}-M.jpg"
              alt="{{title}}"
            />
            <p>{{title}} ({{first_publish_year}})</p>
            <p>Author: {{author_name}}</p>
            <p>Rating: {{ratings_average}}</p>
            <p>{{first_sentence}}</p>
          </div>
        {{/each}}
      </div>
    </section>

    <section id="featured-books">
      <!-- Include book cards or other featured content here -->
    </section>

  </main>



  <script src="/js/homepageFunctions/seedHomepage.js"></script>
  {{#if logged_in}}
    <script src="/js/homepageFunctions/addBook.js"></script>
  {{/if}}
</body>