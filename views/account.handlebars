{{log user}}

<h2>Manage {{user.username}}'s Account</h2>

<h3>Member ID: {{user.id}}</h3>
<h3>Member Since: {{format_time user.createdAt}}</h3>
<h3>Email Registered: {{user.email}}</h3>

<!-- Form for changing password -->
<h3 class="underline">Change Password</h3>
<form id="changePasswordForm">
  <label for="currentPassword">Current Password:</label>
  <input type="password" id="currentPassword" name="currentPassword" required />

  <label for="newPassword">New Password:</label>
  <input type="password" id="newPassword" name="newPassword" required />

  <button type="submit" class="show-add-to-shelf-form-button bg-green-800 text-white py-2 px-4 rounded hover:bg-green-900 hover:text-gray-100">Change Password</button>
</form>

<!-- Button to delete the account -->
<div class="alignCenter">
  <button class="delete-book-button bg-gray-500 text-white py-2 px-4 rounded mt-2 hover:bg-red-700 hover:text-gray-100" id="deleteAccountButton" data-user-id="{{user.id}}">Delete Account</button>
</div>

<script src="/js/accountFunctions/changePassword.js"></script>
<script src="/js/accountFunctions/deleteAccount.js"></script>