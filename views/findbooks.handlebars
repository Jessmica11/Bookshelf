<div id="formDiv">
    <h2 class="font-bold underline">Book Search</h2>
    <form id="searchForm">
        <p>Search By:</p>
        <input type="radio" id="title" name="searchBy" value="title" checked="checked">
        <label for="title">Title</label><br>
        <input type="radio" id="author" name="searchBy" value="author">
        <label for="title">Author</label><br>
        <div class="grid mb-6 gap-6 sm:grid-cols-1 md:grid-cols-2">
            <input type="text" id="input" class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:border-blue-500 block w-full p-2.5">

            <input type="submit" id="submit" value="Search" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 hover:text-gray-100 w-1/3">
        </div>
    </form>

    <div id="results"></div>
</div>

